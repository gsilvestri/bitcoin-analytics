package com.gconsulting.webapp.view;

import java.io.Serializable;

import com.gconsulting.webapp.action.BasePage;

public class ExchangesList extends BasePage implements Serializable {

	private ExchangeManager exchangeManager;

	@Autowired
	public void setExchangeManager(
			@Qualifier("exchangeManager") ExchangeManager exchangeManager) {
		this.exchangeManager = exchangeManager;
	}

	public ExchangesList() {
		setSortColumn("id"); // sets the default sort column
	}

	public List<Exchange> getExchanges() {
		return sort(exchangeManager.get);
	}
}
